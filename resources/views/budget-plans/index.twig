{% extends './layout/default' %}

{% block content %}
    {% if plans|length == 0 %}
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">No Budget Plans</h3>
                    </div>
                    <div class="box-body">
                        <p>No budget plan files found. Place <code>.md</code> files in <code>storage/budget-plans/</code> to view them here.</p>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title"><em class="fa fa-book fa-fw"></em> Monthly Budget Plans</h3>
                    </div>
                    <div class="box-body no-padding">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Plan</th>
                                    <th>Last Modified</th>
                                    <th class="text-right">Size</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for plan in plans %}
                                    <tr>
                                        <td>
                                            <a href="{{ route('budget-plans.show', plan.filename) }}">
                                                <em class="fa fa-file-text-o fa-fw"></em>
                                                {{ plan.name }}
                                            </a>
                                        </td>
                                        <td>{{ plan.modified }}</td>
                                        <td class="text-right">
                                            {{ (plan.size / 1024)|number_format(1) }} KB
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
